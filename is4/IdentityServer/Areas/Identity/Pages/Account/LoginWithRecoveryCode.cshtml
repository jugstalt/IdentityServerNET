@page
@using IdentityServer.Nova.Abstractions.UI
@using IdentityServer.Nova.Extensions.DependencyInjection;
@using IdentityServer.Nova.Services.UI;

@inject IUserInterfaceService userInterface;
@model LoginWithRecoveryCodeModel
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    ViewData["Title"] = "Recovery code verification";
}

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <table>
                    <tr>
                        <td>
                            <div class="panel-logo"></div>
                        </td>
                        <td>
                            <h3 class="panel-title">@userInterface.ApplicationTitle</h3>
                            <div>@ViewData["Title"]</div>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="panel-body">
                <p>
                    You have requested to log in with a recovery code. This login will not be remembered until you provide
                    an authenticator app code at log in or disable 2FA and log in again.
                </p>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.RecoveryCode"></label>
                        <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" autofocus="on" />
                        <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Log in</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}