@page
@model IdentityServer.Areas.Admin.Pages.Roles.EditRole.IndexModel
@{
    ViewData["Title"] = "Role";
    ViewData["ActivePage"] = EditRoleNavPages.Index;
}

    <div class="row">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <div class="col-md-6">
            <form id="-form" method="post">
                <h4>@ViewData["Title"]</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Input.RoleId" />
                <div class="form-group">
                    <label asp-for="Input.RoleName"></label>
                    <input asp-for="Input.RoleName" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Input.RoleDescription"></label>
                    <textarea asp-for="Input.RoleDescription" class="form-control" rows="5">

                </textarea>
                    <span asp-validation-for="Input.RoleDescription" class="text-danger"></span>
                </div>
                <button id="update-role-button" type="submit" class="btn btn-default">Save</button>
            </form>
        </div>
    </div>
