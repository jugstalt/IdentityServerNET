@page
@model IdentityServer.Areas.Admin.Pages.SecretsVault.EditLocker.EditVaultSecret.IndexModel
@{
    ViewData["Title"] = "Secret";
    ViewData["ActivePage"] = EditVaultSecretNavPages.Index;
}

    <div class="row">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <div class="col-md-6">
            <form id="-form" method="post">
                <h4>@ViewData["Title"]</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Input.LockerName" />
                <input type="hidden" asp-for="Input.Name" />
                <div class="form-group">
                    <label asp-for="Input.Name"></label>
                    <input class="form-control" value="@Model.Input.Name" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Input.Description"></label>
                    <textarea asp-for="Input.Description" class="form-control" rows="5">

                </textarea>
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>
                <button id="update-secret-button" type="submit" class="btn btn-default">Save</button>
            </form>
        </div>
    </div>